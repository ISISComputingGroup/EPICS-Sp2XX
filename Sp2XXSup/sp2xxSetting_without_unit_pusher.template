    field(DESC, "Sets the $(MEANING)")
    field(DTYP, "stream")
    
    field(OUT, "@sp2xx.proto set_$(PROTO)($(P),ERROR,NA,$(PVNAME):UNITS:SP) $(PORT)")
    field(PREC, "3")
    field(EGU, "") # set via unit pusher
    
    field(HOPR, "9999")
    field(LOPR, "0.001")
}

