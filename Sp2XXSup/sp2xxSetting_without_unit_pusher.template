record(ai, "$(P)$(PVNAME)") {
    field(DESC, "$(MEANING)")
    field(SCAN, "1 second")
    field(DTYP, "stream")
    field(PREC, "3")
    
    field(INP, "@sp2xx.proto get_$(PROTO)($(P),ERROR,$(PVNAME):UNITS) $(PORT)")
    field(EGU, "")  # Set via unit pusher
    
    info(archive, "VAL")
    info(INTEREST, "MEDIUM")
}

